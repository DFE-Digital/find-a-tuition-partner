@page
@model EnquirerEmail
@using GovUk.Frontend.AspNetCore.TagHelpers
@{
  var backLink = Model.Data.From == ReferrerList.CheckYourAnswers ? "/enquiry/build/check-your-answers" : "/enquiry/build/confirm-school";
  ViewData["Title"] = "What is your email address?";
  ViewData["BackLinkHref"] = $"{backLink}?{Model.Data.ToQueryString()}";

  var errorMessage = !string.IsNullOrEmpty(Model.ErrorMessage);
}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <govuk-error-summary show-if="errorMessage">
      <govuk-error-summary-item asp-for="ErrorMessage" />
    </govuk-error-summary>

    <form method="post">
      <h1 class="govuk-heading-l">What is your email address?</h1>
      <div asp-validation-group-for="Data.Email" data-testid="enquirer-email">
        <govuk-input asp-for="Data.Email" input-class="govuk-input govuk-!-width-three-quarters" autocomplete="email" data-testid="enquirer-email-input-box" type="email" spellcheck="false">
          <govuk-input-label>Email address</govuk-input-label>
          <govuk-input-hint>Tuition partners won&#8217;t see your email address. We&#8217;ll use this email to notify you if you get a response from a tuition partner.</govuk-input-hint>
        </govuk-input>
      </div>
      <partial name="_SearchModelHiddenInputs" model="@Model.Data" />
      <input type="hidden" name="handler" value="Submit" />
      <div class="govuk-button-group">
        <govuk-button prevent-double-click="true" type="submit" data-testid="call-to-action">Continue</govuk-button>
      </div>
    </form>
  </div>
</div>