@page
@using Application.Constants
@model UI.Pages.Enquiry.Build.SENDRequirements
@using GovUk.Frontend.AspNetCore.TagHelpers
@{
  var backLink = Model.Data.From == ReferrerList.CheckYourAnswers ? "/enquiry/build/check-your-answers" : "/enquiry/build/tutoring-logistics";
  ViewData["Title"] = "SEND and additional requirements";
  ViewData["BackLinkHref"] = $"{backLink}?{Model.Data.ToQueryString()}";
}

<form method="post">
  <span class="govuk-caption-l">Create your tuition enquiry</span>
  <h1 class="govuk-heading-l">SEND and additional requirements</h1>
  <p class="govuk-body">Tuition partners may be able to provide specialist tuition for specific needs, for example:</p>
  <ul class="govuk-list govuk-list--bullet govuk-!-margin-left-4">
    <li>pupils with SEND needs</li>
    <li>sustained absence from school</li>
    <li>school refusers</li>
    <li>English as a second language</li>
    <li>any social, behavioural or learning challenges</li>
  </ul>
  <partial name="_PIIWarning" />
  <govuk-character-count asp-for="Data.SENDRequirements" threshold="@IntegerConstants.LargeTextAreaMaxCharacterThreshold" rows="12" max-length="@IntegerConstants.LargeTextAreaMaxCharacterSize">
    <govuk-character-count-label class="govuk-label--m">
      Describe your pupils' SEND or additional requirements that require specialist tuition support (optional)
    </govuk-character-count-label>
  </govuk-character-count>
  <partial name="_SearchModelHiddenInputs" model="@Model.Data" />
  <input type="hidden" name="handler" value="Submit" />
  <govuk-button prevent-double-click="true" type="submit" data-testid="call-to-action">Continue</govuk-button>
</form>