@page
@model UI.Pages.Enquiry.Build.Guidance
@using GovUk.Frontend.AspNetCore.TagHelpers
@{
    ViewData["Title"] = "Make an enquiry guidance";
    ViewData["BackLinkHref"] = $"/search-results?{Model.Data.ToQueryString()}";
    ViewData["IncludePrintPage"] = true;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Ask tuition partners to work with you</h1>
        <p class="govuk-body">
            You'll need to provide some more information about your school's needs.
        </p>
        <p class="govuk-body">
            You'll then be notified by email if tuition partners think they can meet your needs.
        </p>
        <p class="govuk-body">
            You'll then be able to select the tuition partners you want to work with.
        </p>
        <p class="govuk-body">
            If you do not get any responses in 10 working days, you'll get an email explaining what you can do next.
        </p>

        <govuk-details data-testid="qatp-details">
            <govuk-details-summary>
                How tuition partners will use your information
            </govuk-details-summary>
            <govuk-details-text>
                <p class="govuk-body">Tuition partners won’t see your email or school details until you agree to it.</p>
                <p class="govuk-body">All tuition partners in this service have been briefed etc on how to respond properly to requests</p>
            </govuk-details-text>
        </govuk-details>

        <div class="govuk-body app-print-hide">
            <a class="govuk-button" data-module="govuk-button" draggable="false" href="/enquiry/build/enquire?@Model.Data.ToQueryString()" role="button">Continue</a>
        </div>

    </div>
</div>