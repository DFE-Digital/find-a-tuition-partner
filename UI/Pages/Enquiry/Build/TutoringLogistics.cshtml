@page
@using Application.Constants
@model UI.Pages.Enquiry.Build.TutoringLogistics
@using GovUk.Frontend.AspNetCore.TagHelpers
@{
  var backLink = Model.Data.From == ReferrerList.CheckYourAnswers ? "/enquiry/build/check-your-answers" : "/enquiry/build/enquirer-email";
  ViewData["Title"] = "What type of tuition plan do you need?";
  ViewData["BackLinkHref"] = $"{backLink}?{Model.Data.ToQueryString()}";
}
<form method="post">
  <govuk-error-summary>
    <govuk-error-summary-item asp-for="Data.TutoringLogistics" />
  </govuk-error-summary>
  <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="@IntegerConstants.EnquiryQuestionsMaxCharacterSize" data-threshold="@IntegerConstants.EnquiryQuestionsMaxCharacterThreshold">
    <div class="govuk-form-group@(Model.ModelState.IsValid ? "" : " govuk-form-group--error")">
      <h1 class="govuk-label-wrapper">
        <label asp-for="Data.TutoringLogistics" class="govuk-label govuk-label--l">
          What type of tuition plan do you need?
        </label>
      </h1>
      <partial name="_PIIWarning" />
      <div class="govuk-hint" id="Data_TutoringLogistics-hint">
        For example, number of pupils, tuition hours per pupil, specific start date, length of tuition, preferred tutoring time of day
      </div>
      <span asp-validation-for="Data.TutoringLogistics" class="govuk-error-message"></span>
      <textarea asp-for="Data.TutoringLogistics" aria-describedby="Data_TutoringLogistics-hint" class="govuk-textarea govuk-js-character-count" rows="12">
      </textarea>
    </div>
    <div class="govuk-hint govuk-character-count__message" id="Data_TutoringLogistics-info">You can enter up to @IntegerConstants.EnquiryQuestionsMaxCharacterSize characters</div>
  </div>
  <partial name="_SearchModelHiddenInputs" model="@Model.Data" />
  <input type="hidden" name="handler" value="Submit" />
  <govuk-button prevent-double-click="true" type="submit" data-testid="call-to-action">Continue</govuk-button>
</form>