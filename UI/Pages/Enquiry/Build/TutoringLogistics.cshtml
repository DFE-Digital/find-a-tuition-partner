@page
@using Application.Constants
@model UI.Pages.Enquiry.Build.TutoringLogistics
@using GovUk.Frontend.AspNetCore.TagHelpers
@{
  var backLink = Model.Data.From == ReferrerList.CheckYourAnswers ? "/enquiry/build/check-your-answers" : "/enquiry/build/enquirer-email";
  ViewData["Title"] = "Your tuition plan";
  ViewData["BackLinkHref"] = $"{backLink}?{Model.Data.ToQueryString()}";
}
<form method="post">
  <span class="govuk-caption-l">Create your tuition plan</span>
  <h1 class="govuk-heading-l">Your tuition plan</h1>
  <div class="govuk-inset-text">
    You will be asked about SEND and additional requirements on the next page
  </div>
  <partial name="_PIIWarning" />
  <govuk-character-count asp-for="Data.TutoringLogisticsDetailsModel.NumberOfPupils" threshold="@IntegerConstants.EnquiryShortQuestionsMaxCharacterThreshold" rows="2" max-length="@IntegerConstants.EnquiryShortQuestionsMaxCharacterSize">
    <govuk-character-count-label class="govuk-label--m">
      How many pupils need tuition?
    </govuk-character-count-label>
    <govuk-character-count-hint>
      Specify the number of pupils for each key stage and subject
    </govuk-character-count-hint>
  </govuk-character-count>
  <govuk-character-count asp-for="Data.TutoringLogisticsDetailsModel.StartDate" threshold="@IntegerConstants.EnquiryShortQuestionsMaxCharacterThreshold" rows="2" max-length="@IntegerConstants.EnquiryShortQuestionsMaxCharacterSize">
    <govuk-character-count-label class="govuk-label--m">
      When do you want tuition to start?
    </govuk-character-count-label>
    <govuk-character-count-hint>
      You can ask for a specific date, within term time or during holidays
    </govuk-character-count-hint>
  </govuk-character-count>
  <govuk-character-count asp-for="Data.TutoringLogisticsDetailsModel.TuitionDuration" threshold="@IntegerConstants.EnquiryShortQuestionsMaxCharacterThreshold" rows="2" max-length="@IntegerConstants.EnquiryShortQuestionsMaxCharacterSize">
    <govuk-character-count-label class="govuk-label--m">
      How long do you need tuition for?
    </govuk-character-count-label>
    <govuk-character-count-hint>
      Explain how many tuition hours per week per pupil is needed
    </govuk-character-count-hint>
  </govuk-character-count>
  <govuk-character-count asp-for="Data.TutoringLogisticsDetailsModel.TimeOfDay" threshold="@IntegerConstants.EnquiryShortQuestionsMaxCharacterThreshold" rows="2" max-length="@IntegerConstants.EnquiryShortQuestionsMaxCharacterSize">
    <govuk-character-count-label class="govuk-label--m">
      What time of day do you need tuition?
    </govuk-character-count-label>
    <govuk-character-count-hint>
      For example, 1:30pm in the afternoon during school hours
    </govuk-character-count-hint>
  </govuk-character-count>
  <partial name="_SearchModelHiddenInputs" model="@Model.Data" />
  <input type="hidden" name="handler" value="Submit" />
  <govuk-button prevent-double-click="true" type="submit" data-testid="call-to-action">Continue</govuk-button>
</form>