@page
@using Application.Constants
@model UI.Pages.Enquiry.Build.AdditionalInformation
@using GovUk.Frontend.AspNetCore.TagHelpers
@{
  var backLink = Model.Data.From == ReferrerList.CheckYourAnswers ? "/enquiry/build/check-your-answers" : "/enquiry/build/send-requirements";
  ViewData["Title"] = "Is there anything else that you want tuition partners to consider?";
  ViewData["BackLinkHref"] = $"{backLink}?{Model.Data.ToQueryString()}";
}

<form method="post">
  <govuk-error-summary>
    <govuk-error-summary-item asp-for="Data.AdditionalInformation" />
  </govuk-error-summary>
  <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="@IntegerConstants.EnquiryQuestionsMaxCharacterSize" data-threshold="@IntegerConstants.EnquiryQuestionsMaxCharacterThreshold">
    <div class="govuk-form-group@(Model.ModelState.IsValid ? "" : " govuk-form-group--error")">
      <h1 class="govuk-label-wrapper">
        <label asp-for="Data.AdditionalInformation" class="govuk-label govuk-label--l">
          Is there anything else that you want tuition partners to consider? (optional)
        </label>
      </h1>
      <partial name="_PIIWarning" />
      <div class="govuk-hint" id="Data_AdditionalInformation-hint">
        For example, your school budget or National Tutoring Programme funding
      </div>
      <span asp-validation-for="Data.AdditionalInformation" class="govuk-error-message"></span>
      <textarea asp-for="Data.AdditionalInformation" aria-describedby="Data_AdditionalInformation-hint" class="govuk-textarea govuk-js-character-count" rows="12">
      </textarea>
    </div>
    <div class="govuk-hint govuk-character-count__message" id="Data_AdditionalInformation-info">You can enter up to @IntegerConstants.EnquiryQuestionsMaxCharacterSize characters</div>
  </div>
  <partial name="_SearchModelHiddenInputs" model="@Model.Data" />
  <input type="hidden" name="handler" value="Submit" />
  <govuk-button prevent-double-click="true" type="submit" data-testid="call-to-action">Continue</govuk-button>
</form>